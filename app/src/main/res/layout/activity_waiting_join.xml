<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="25sp"
    tools:context=".WaitingJoinActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="250dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvmeetingtopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meeting Topic" />

        <TextView
            android:id="@+id/tvmeetingdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meeting Date" />

        <TextView
            android:id="@+id/tvmeetingtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meeting Time" />

        <TextView
            android:id="@+id/tvmeetingid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meeting ID" />

        <Button
            android:id="@+id/leaveBtn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/button4"
            android:text="Leave Meeting" />

    </LinearLayout>

</RelativeLayout>